#! /bin/bash

echo "Hi !"
echo -n "Enter trial name, then press [ENTER]: "
read identifier

read -r -p "Do you wish to proceed with files transfer ? [Y/n]: " response
	response=${response,,} # tolower
	if [[ $response =~ ^(yes|y| ) ]]; then
		mkdir -p /home/pi/${identifier}
		while read line; do
			HOSTNAME=$line
			USERNAME=pi
			IFS='.'
			read -ra ADDR <<< "$line"
			IFS=' '
	    
			filename="${identifier}_${ADDR[0]}.h264"
	
			echo "Please wait for ${ADDR[0]} ..."
			scp ${USERNAME}@${HOSTNAME}:${filename} /home/pi/${identifier}
			echo "${filename} transfered."
		done < ip_addr_book.txt
	fi

	if [[ $response =~ ^(no|n| ) ]]; then
		echo "OK"
	fi

read -r -p "Do you wish to proceed with remote files deletion ? [Y/n]: " response
	response=${response,,} # tolower
	if [[ $response =~ ^(yes|y| ) ]]; then
		while read line; do
			HOSTNAME=$line
			USERNAME=pi
			IFS='.'
			read -ra ADDR <<< "$line"
			IFS=' '
	    
			filename="${identifier}_${ADDR[0]}.h264"
			SCRIPT="rm ${filename}"
			
			echo "Please wait for ${ADDR[0]} ..."
			ssh -l ${USERNAME}@${HOSTNAME} "${SCRIPT}"
			echo "${filename} deleted from ${ADDR[0]}."
		done < ip_addr_book.txt
	fi

	if [[ $response =~ ^(no|n| ) ]]; then
		echo "OK"
	fi
echo "Exiting ..."
exit 1
