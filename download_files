i#! /bin/bash



	echo -n "Enter trial name, then press [ENTER]:"
	read identifier
	
	IFS='.'
	

       while read line; do

            HOSTNAME=$line
            USERNAME=pi
	    read -ra ADDR <<< "$line"
            scp ${USERNAME}@${HOSTNAME}:${identifier}_${ADDR[0]}.h264 /home/pi/${identifier}/ &


        done < ip_addr_book.txt
        
 	echo "Wait for files to complete download before deleting them with delete_videos script"






